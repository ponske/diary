rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // waiting_timesコレクション: 誰でも読み取り可能、書き込みは認証済みユーザーのみ
    match /waiting_times/{document} {
      allow read: if true;  // 誰でも読み取り可能（匿名認証でもOK）
      allow write: if request.auth != null;  // 認証済みユーザーのみ書き込み可能
    }
    
    // その他のコレクションは既存のルールに従う
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}




